        <form action="/edit-project/{{project.id}}" method="post">
        <h1 style="text-align: center;">Add My Project</h1>

            <div>
                <label for="project_name">Project Name</label>
                <br>
                <input type="text" name="project_name" value="{{project.project_name}}">
            </div>

            <div class="container-date">
                <div class="date-item">
                    <label for="start_date">Start Date</label>
                    <input type="date" name="start_date" value="{{project.start_date}}">
                </div>
                <div class="date-item">
                    <label for="endDate">End Date</label>
                    <input type="date" name="end_date"  value="{{project.start_date}}">
                </div>
            </div>
            
           

            <div>
                <label for="Description">Description</label>
                <br>
                <textarea name="description" rows="5"> {{project.description}}</textarea>
            </div>
                  <div class="checkbox-container">
    <label for="technologies" style="margin-bottom: 10px;">Technologies</label>
    <div class="checkbox-group">
        <div class="checkbox-item">
            <input type="checkbox" name="technologies" value="Node.js">
            <label for="nodejs">Node.js</label>
        </div>
        <div class="checkbox-item">
            <input type="checkbox" name="technologies" value="React.js">
            <label for="reactjs">React.js</label>
        </div>
    </div>
    <div class="checkbox-group">
        <div class="checkbox-item">
            <input type="checkbox" name="technologies" value="TypeScript">
            <label for="typescript">TypeScript</label>
        </div>
        <div class="checkbox-item">
            <input type="checkbox" name="technologies" value="Next.js">
            <label for="nextjs">Next.js</label>
        </div>
    </div>
</div>
            <div>
                <label for="projectImage">Upload Image</label>
                <br>
                <div class="upload">
                    <input type="file" id="projectImage" name="Image" accept="image/*"  value="{{project.image}}">
                    <i class="fas fa-paperclip"></i>
                </div>
            </div>
          
            

            <button type="submit">Edit Project</button>
        </form>

        <div class="uploaded" id="contents">
            
        </div>


        <script src="/assets/js/project.js"></script>
        <script src="/assets/js/burger.js"></script>
</body>
</html>
